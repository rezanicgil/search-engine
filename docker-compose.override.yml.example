# docker-compose.override.yml - Development overrides
# Copy this file to docker-compose.override.yml for hot-reload during development
# This file is automatically used by docker-compose when present

services:
  backend:
    # Override build to use development Dockerfile with hot-reload
    build:
      context: ./backend
      dockerfile: docker/Dockerfile.dev
    # Mount source code as volume for hot-reload
    volumes:
      - ./backend:/app
      - /app/bin
      - /app/vendor
    # Use development mode
    environment:
      GIN_MODE: "debug"
    # Override command to use air for hot-reload
    command: ["air", "-c", ".air.toml"]

